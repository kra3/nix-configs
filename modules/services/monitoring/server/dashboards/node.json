  "panels": [
    {
      "datasource": "Prometheus",
      "description": "CPU usage",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\"}[5m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "title": "CPU Usage (%)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Load average",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 2,
      "targets": [
        {
          "expr": "node_load1{instance=~\"$instance\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        },
        {
          "expr": "node_load5{instance=~\"$instance\"}",
          "legendFormat": "{{instance}}",
          "refId": "B"
        },
        {
          "expr": "node_load15{instance=~\"$instance\"}",
          "legendFormat": "{{instance}}",
          "refId": "C"
        }
      ],
      "title": "Load Average",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Memory usage",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "id": 3,
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"}))",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "title": "Memory Usage (%)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Disk I/O",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "id": 4,
      "targets": [
        {
          "expr": "sum by (instance) (rate(node_disk_read_bytes_total{instance=~\"$instance\"}[5m]))",
          "legendFormat": "{{instance}} read",
          "refId": "A"
        },
        {
          "expr": "sum by (instance) (rate(node_disk_written_bytes_total{instance=~\"$instance\"}[5m]))",
          "legendFormat": "{{instance}} write",
          "refId": "B"
        }
      ],
      "title": "Disk Throughput (bytes/s)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Network throughput",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "id": 5,
      "targets": [
        {
          "expr": "sum by (instance) (rate(node_network_receive_bytes_total{device!~\"lo\", instance=~\"$instance\"}[5m]))",
          "legendFormat": "{{instance}} rx",
          "refId": "A"
        },
        {
          "expr": "sum by (instance) (rate(node_network_transmit_bytes_total{device!~\"lo\", instance=~\"$instance\"}[5m]))",
          "legendFormat": "{{instance}} tx",
          "refId": "B"
        }
      ],
      "title": "Network Throughput (bytes/s)",
      "type": "timeseries"
    }
  ],
