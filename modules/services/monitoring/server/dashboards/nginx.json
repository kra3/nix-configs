{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": "Prometheus",
      "description": "Requests per second",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total[5m])",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "title": "Nginx RPS",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Connection states",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "id": 2,
      "targets": [
        {
          "expr": "nginx_connections_active",
          "legendFormat": "active {{instance}}",
          "refId": "A"
        },
        {
          "expr": "nginx_connections_reading",
          "legendFormat": "reading {{instance}}",
          "refId": "B"
        },
        {
          "expr": "nginx_connections_writing",
          "legendFormat": "writing {{instance}}",
          "refId": "C"
        },
        {
          "expr": "nginx_connections_waiting",
          "legendFormat": "waiting {{instance}}",
          "refId": "D"
        }
      ],
      "title": "Nginx Connections",
      "type": "timeseries"
    },
    {
      "datasource": "Loki",
      "description": "Nginx log rate from systemd journal",
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "id": 3,
      "targets": [
        {
          "expr": "sum(rate({job=\"systemd-journal\", host=\"sutala\"} |= \"nginx\"[5m]))",
          "legendFormat": "nginx logs",
          "refId": "A"
        }
      ],
      "title": "Nginx Log Rate (Loki)",
      "type": "timeseries"
    },
    {
      "datasource": "Loki",
      "description": "Recent nginx errors",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 22
      },
      "id": 4,
      "options": {
        "showTime": true,
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "expr": "{job=\"systemd-journal\", host=\"sutala\"} |= \"nginx\" |~ \"(?i)error|fail|panic\"",
          "refId": "A"
        }
      ],
      "title": "Nginx Errors (Loki)",
      "type": "logs"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": [
    "monitoring",
    "nginx"
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timezone": "browser",
  "title": "Nginx",
  "uid": "nginx-drilldown",
  "version": 1
}
