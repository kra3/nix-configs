  "panels": [
    {
      "datasource": "Prometheus",
      "description": "Queries per second",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "targets": [
        {
          "expr": "rate(unbound_queries_total[5m])",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "title": "Unbound QPS",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Cache hit/miss rates",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "id": 2,
      "targets": [
        {
          "expr": "rate(unbound_cache_hits_total[5m])",
          "legendFormat": "hits {{instance}}",
          "refId": "A"
        },
        {
          "expr": "rate(unbound_cache_misses_total[5m])",
          "legendFormat": "misses {{instance}}",
          "refId": "B"
        }
      ],
      "title": "Cache Hits/Misses",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "95th percentile response time",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "id": 3,
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(unbound_response_time_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "title": "Response Time (p95)",
      "type": "timeseries"
    },
    {
      "datasource": "Loki",
      "description": "Unbound log rate from systemd journal",
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "id": 4,
      "targets": [
        {
          "expr": "sum(rate({job=\"systemd-journal\", host=\"sutala\"} |= \"unbound\"[5m]))",
          "legendFormat": "unbound logs",
          "refId": "A"
        }
      ],
      "title": "Unbound Log Rate (Loki)",
      "type": "timeseries"
    },
    {
      "datasource": "Loki",
      "description": "Recent unbound errors",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 22
      },
      "id": 5,
      "options": {
        "showTime": true,
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "expr": "{job=\"systemd-journal\", host=\"sutala\"} |= \"unbound\" |~ \"(?i)error|fail|panic\"",
          "refId": "A"
        }
      ],
      "title": "Unbound Errors (Loki)",
      "type": "logs"
    }
  ],
